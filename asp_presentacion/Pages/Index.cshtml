@page
@model IndexModel
@{
    ViewData["Title"] = "";
}
@if (!Model.EstaLogueado)
{
    <div class="container"
         align="left"
         style="width:100%">
        <h3>
            Login
        </h3>

        <form method="POST">
            <div style="width:60%">
                <div class="form-group">
                    <label class="control-label">
                        Usuario:
                    </label>
                    <input onchange="keyUp(this)"
                           asp-for="@Model.Email"
                           class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Contrasena:
                    </label>
                    <input type="password"
                           onchange="keyUp(this)"
                           asp-for="@Model.Contrasena"
                           class="form-control" />
                </div>
                <input type="submit"
                       value="Limpiar"
                       asp-page-handler="BtClean"
                       class="btn btn-default" />
                <input type="submit"
                       value="Entrar"
                       asp-page-handler="BtEnter"
                       class="btn btn-default" />
            </div>
        </form>
        <form method="POST">
            <div style="width:60%">
                <div class="form-group">
                    <label class="control-label">
                        Nuevo Usuario:
                    </label>
                    <input onchange="keyUp(this)"
                           asp-for="@Model.Email2"
                           class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Nueva Contraseña:
                    </label>
                    <input type="password"
                           onchange="keyUp(this)"
                           asp-for="@Model.Contrasena2"
                           class="form-control" />
                </div>
                <input type="submit"
                       value="Limpiar"
                       asp-page-handler="BtClean2"
                       class="btn btn-default" />
                <input type="submit"
                       value="Registrarse"
                       asp-page-handler="BtEnter2"
                       class="btn btn-default" />
            </div>
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">
            Bienvenido
        </h1>

        <form method="POST">
            <input type="submit"
                   value="Cerrar"
                   asp-page-handler="BtClose"
                   class="btn btn-default" />
        </form>
    </div>
}